<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:IntelliWatch"
             mc:Ignorable="d"
             x:Class="IntelliWatch.UCMainPage"
             x:Name="UserControl"
             d:DesignWidth="344"
             d:DesignHeight="280"
             Background="#00000000"
             Loaded="UserControl_Loaded"
             PreviewMouseDown="UserControl_PreviewMouseDown">
    <UserControl.Resources>
        <local:BoolToVisibility x:Key="btv" />
    </UserControl.Resources>
    <Border x:Name="BorderMain"
            BorderBrush="#0082B3E7"
            BorderThickness="0"
            CornerRadius="2">
        <Grid>
            <local:UCCameraBottomControl Margin="0"
                                         VerticalAlignment="Bottom"
                                         Visibility="{Binding IsChecked,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=RadioButton}, Converter={StaticResource ResourceKey=btv}}" />
        </Grid>
    </Border>
</UserControl>