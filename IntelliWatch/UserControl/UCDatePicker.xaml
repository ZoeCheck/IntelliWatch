<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="IntelliWatch.UCDatePicker"
             x:Name="UserControl"
             Height="160"
             Width="200"
             Loaded="UserControl_Loaded" >

    <Border CornerRadius="2"
            Background="#020068FF">

        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border x:Name="BorderYear"
                    BorderThickness="0"
                    Margin="0"
                    Background="#FF255888">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnPreviewYear"
                            Content="Button"
                            Margin="0"
                            Width="25"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{DynamicResource ButtonStyleLeft}"
                            Click="btnPreviewYear_Click" />
                    <Button x:Name="btnNextYear"
                            Content="Button"
                            Margin="0"
                            Width="25"
                            Height="20"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{DynamicResource ButtonStyleRight}"
                            Click="btnNextYear_Click" />
                    <TextBlock Grid.Column="1"
                               Margin="0"
                               TextWrapping="Wrap"
                               Text="{Binding Year}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White" />
                </Grid>
            </Border>
            <Border x:Name="BorderMonth"
                    BorderThickness="0"
                    Margin="0"
                    Grid.Row="1"
                    Background="#FF2079A1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnPreviewMonth"
                            Content="Button"
                            Margin="0"
                            Width="25"
                            Height="20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Style="{DynamicResource ButtonStyleLeft}"
                            Click="btnPreviewMonth_Click" />
                    <Button x:Name="btnNextMonth"
                            Content="Button"
                            Margin="0"
                            Width="25"
                            Grid.Column="2"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{DynamicResource ButtonStyleRight}"
                            Click="btnNextMonth_Click" />
                    <TextBlock Grid.Column="1"
                               Margin="0"
                               TextWrapping="Wrap"
                               Text="{Binding Month}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>
            <Border x:Name="BorderDay"
                    Margin="0"
                    Grid.Row="2">
                <Grid x:Name="GridRadio">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Border BorderBrush="Black"
                            BorderThickness="0"
                            Grid.ColumnSpan="7"
                            Margin="0"
                            Background="#FF54718D"
                            Grid.Row="3" />
                    <Border BorderBrush="Black"
                            BorderThickness="0"
                            Grid.ColumnSpan="7"
                            Margin="0"
                            Background="#FF54718D"
                            Grid.Row="5" />
                    <Border BorderBrush="Black"
                            BorderThickness="0"
                            Grid.ColumnSpan="7"
                            Margin="0"
                            Background="#FF255888"
                            Grid.Row="2" />
                    <Border BorderBrush="Black"
