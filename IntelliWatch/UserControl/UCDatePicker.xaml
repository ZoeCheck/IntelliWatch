<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="IntelliWatch.UCDatePicker"
             x:Name="UserControl"
             Height="160"
             Width="200"
             Loaded="UserControl_Loaded">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border x:Name="BorderYear"
                BorderThickness="1"
                Margin="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="cmbYear"
                          Grid.Column="1"
                          Margin="0"
                          HorizontalAlignment="Center"
                          Width="60">
                    <ComboBoxItem Content="2010" />
                    <ComboBoxItem Content="2011" />
                    <ComboBoxItem Content="2012" />
                    <ComboBoxItem Content="2013" />
                    <ComboBoxItem Content="2014"
                                  IsSelected="True" />
                </ComboBox>
                <Button Content="Button" Margin="0" Width="25" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Button" Margin="0" Width="25" Height="20" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Border x:Name="BorderMonth"
                BorderThickness="1"
                Margin="0"
                Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="cmbMonth"
                          Grid.Column="1"
                          Margin="0"
                          HorizontalAlignment="Center"
                          Width="60">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                    <ComboBoxItem Content="6" />
                    <ComboBoxItem Content="7" />
                    <ComboBoxItem Content="8" />
                    <ComboBoxItem Content="9"
                                  IsSelected="True" />
                    <ComboBoxItem Content="10" />
                    <ComboBoxItem Content="11" />
                    <ComboBoxItem Content="12" />
                </ComboBox>
                <Button Content="Button" Margin="0" Width="25" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Button" Margin="0" Width="25" Grid.Column="2" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Border x:Name="BorderDay"
                Margin="0"
                Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"><Run Language="zh-cn"
                                                           Text="日" /></TextBlock>
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           Text="一" />
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           Grid.Column="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="二" />
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           Grid.Column="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="三" />
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           Grid.Column="4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="四" />
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           Grid.Column="5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="五" />
                <TextBlock Margin="0"
                           TextWrapping="Wrap"
                           Grid.Column="6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="六" />
                <RadioButton x:Name="r1"
                             Content="1"
                             Margin="0"
                             Grid.Row="1" Style="{DynamicResource RadioButtonStyleDay}" />
                <RadioButton x:Name="r2"
                             Content="1"
                             Margin="0"
                             Grid.Row="1"
                             Grid.Column="1"
                             Style="{DynamicResource RadioButtonStyleDay}" />
