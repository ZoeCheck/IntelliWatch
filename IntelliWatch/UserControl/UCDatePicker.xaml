                            Grid.ColumnSpan="7"
                            Margin="0"
                            Background="#FF255888"
                            Grid.Row="6" />
                    <Border BorderBrush="Black"
                            BorderThickness="0"
                            Grid.ColumnSpan="7"
                            Margin="0"
                            Background="#FF54718D"
                            Grid.Row="1" />
                    <Border BorderBrush="Black"
                            BorderThickness="0"
                            Grid.ColumnSpan="7"
                            Margin="0"
                            Background="#FF255888" />
                    <TextBlock Margin="0"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"><Run Language="zh-cn"
                                                       Text="日" /></TextBlock>
                    <TextBlock Margin="0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               Text="一"
                               Foreground="White" />
